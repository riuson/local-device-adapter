{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/LocalDeviceAdapter/LocalDeviceAdapter.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/LocalDeviceAdapter/LocalDeviceAdapter.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean",
      "command": "dotnet",
      "type": "process",
      "args": [
        "clean",
        "${workspaceFolder}/src/LocalDeviceAdapter/LocalDeviceAdapter.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish win10x64 sc",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/LocalDeviceAdapter/LocalDeviceAdapter.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "-f",
        "net6.0",
        "-r",
        "win10-x64",
        "--self-contained"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish linx64 sc",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/LocalDeviceAdapter/LocalDeviceAdapter.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "-f",
        "net6.0",
        "-r",
        "linux-x64",
        "--self-contained"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
